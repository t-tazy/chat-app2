<div class="side-bar-header">
  <div class="user-name">
    <%= link_to current_user.name, edit_user_path(current_user.id) %>
  </div>
  <%= link_to 'チャットを作成する', new_room_path, class: "create-new-chat" %>
</div>
<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <%= link_to room.name, room_messages_path(room) %>
    </div>
  <% end %>
</div>
