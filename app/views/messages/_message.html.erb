<div class="message">
  <div class="message-top">
    <div class="name">
      <%= message.user.name %>
    </div>
    <div class="time">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="message-bottom">
    <%= message.content %>
  </div>
  <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</div>
